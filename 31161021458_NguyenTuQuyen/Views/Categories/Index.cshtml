@model IEnumerable<_31161021458_NguyenTuQuyen.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Tạo mới danh mục", "Create")
</p>
<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.Name)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.ImagePath)
		</th>
		<th>Tùy chỉnh</th>
	</tr>

@foreach (var item in Model) {
	<tr>
		<td>
			@Html.DisplayFor(modelItem => item.Name)
		</td>
		<td>
			<img src="@Url.Content(item.ImagePath)" width="50" height="50" multiple />
		</td>
		<td>
			@Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.ID }) |
			@Html.ActionLink("Chi tiết", "Details", new { id = item.ID }) |
			@Html.ActionLink("Xóa", "Delete", new { id = item.ID })
		</td>
	</tr>
}

</table>
<div>
	@Html.ActionLink("Trở về Home", "Index", "Products")
</div>